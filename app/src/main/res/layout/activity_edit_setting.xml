<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.eazyhomebrunei.com.Fragment.settingfargment"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:src="@drawable/clrlocation" />

            <LinearLayout
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/light_gray" />

                <EditText
                    android:id="@+id/adr1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="kannur,pzdi-670306"
                    android:textColor="@color/txtclr"
                    android:visibility="visible"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />
        </LinearLayout>
        <View

            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue_grey_100" />
        <LinearLayout
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/clremail" />

            <LinearLayout
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/light_gray" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="name@gmail.com"
                    android:textColor="@color/txtclr" />
            </LinearLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue_grey_100" />
        <LinearLayout
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/clrphone" />

            <LinearLayout
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/light_gray" />

                <EditText
                    android:id="@+id/phn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="+91 876543234"
                    android:textColor="@color/txtclr" />
            </LinearLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_grey_100" />
        <LinearLayout
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">




                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>