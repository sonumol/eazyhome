<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.eazyhomebrunei.com.otp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b3"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sepraiz_logo_png2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textColor="@color/txtclr"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Verification code"
            android:textColor="@color/txtclr"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >


    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:layout_marginLeft="39dp"
        android:id="@+id/txt_pin_entry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="popIn" />
</TableRow>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/textclr1"
            android:layout_marginLeft="40dp"
            android:text="Please enter the verification code." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent a verification code to your phone"
            android:layout_marginLeft="40dp"
            android:textSize="15dp"
            android:textColor="@color/textclr1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="number"
                android:textColor="@color/textclr1"

                android:textSize="15dp" />

            <TextView
                android:id="@+id/phnumber"
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="+919999999999"
                android:textColor="@color/textclr1"

                android:textSize="15dp" />
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resend"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textSize="15dp"
            android:textColor="@color/colorPrimarylight" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="|"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/light_gray" />
        <TextView
            android:id="@+id/change"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Change Mobile Number"
            android:textSize="15dp"
            android:textColor="@color/colorPrimarylight" />
    </LinearLayout>

    <ProgressBar

        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/editTextCode"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/otp1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_background1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>