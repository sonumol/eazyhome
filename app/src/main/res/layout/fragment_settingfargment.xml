<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="17dp"
                    android:layout_height="30dp"
                    android:text="Name"
                    android:visibility="gone"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/imagename"
                    android:layout_width="33dp"
                    android:tint="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myprofile1" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"

                    android:id="@+id/name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="10dp"
                    android:autoLink="all"
                    android:hint="Enter Name"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLines="10"
                    android:background="@drawable/text_background"

                    android:minLines="1"
                    android:scrollbars="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="17dp"
                    android:layout_height="30dp"
                    android:text="Email"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="17dp"
                    />
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clremail" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"

                    android:id="@+id/email1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="10dp"
                    android:autoLink="all"
                    android:hint="Enter Email"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLines="10"
                    android:background="@drawable/text_background"

                    android:minLines="1"
                    android:scrollbars="none"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="17dp"
                    android:layout_height="30dp"
                    android:text="Address"
                    android:visibility="gone"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />
                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/imageView13"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clrlocation" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"

                    android:layout_marginTop="30dp"
                    android:id="@+id/adr1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="10dp"
                    android:autoLink="all"
                    android:hint="Enter Address"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLines="10"
                    android:background="@drawable/text_background"

                    android:minLines="1"
                    android:scrollbars="none" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clrlogout" />




                    <TextView
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="  Logout"
                        android:textColor="@color/txtclr" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical">




                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/text_background3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="app.eazyhomebrunei.com.Fragment.settingfargment"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="258dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:orientation="vertical">




                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>