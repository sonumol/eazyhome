                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:src="@drawable/edit1" />
        </LinearLayout>
        <View

            android:layout_width="fill_parent"
